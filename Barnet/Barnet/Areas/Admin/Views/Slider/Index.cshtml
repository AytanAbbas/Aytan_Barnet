@model List<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">  <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Slider" asp-action="Create">Create</a> </div>

        <div class="col-lg-12 mt-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Category</th>
                        <th scope="col">Title</th>
                        <th scope="col">Content</th>
                        <th scope="col"></th>


                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;
                        foreach (var item in Model)
                        {
                            i++;
                                        <tr>
                                            <th scope="row">@i</th>
                                            <td><img src="~/Uploads/@item.Image" alt="" width="150" /> </td>
                                            <td>@item.Category</td>
                                            <td>@item.Title</td>
                                            <td>@item.Content</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are You Sure?')">Delete</a>

                                            </td>
                                        </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

